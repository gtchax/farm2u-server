{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                               
    "rootDir": "./src",                                                   
    "baseUrl": ".",                                  
    "outDir": "./dist",                                  
    "removeComments": true,                           
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "noImplicitAny": true,                           
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }                    
  }
}
